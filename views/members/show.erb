<div class="info-backing form-norm">
  <h2><%=@member.name%></h2>
  <div class="profile-pic" style="background-image: url('<%=@member.picture%>')"></div>

    <form action="/members/<%=@member.id%>/edit" method="GET">
      <input type="submit" value="Edit">
    </form>
    <br>
    <form action="/members/<%=@member.id%>/delete" method="POST">
      <input type="submit" value="Delete"/>
    </form>
</div>
<hr/>
<div class="info-backing">
  <h3><%=@member.name.capitalize %> currently sponsors the following Nature Advocates:</h3>
    <% for animal in @animals do %>
    <div class="form-norm">
      <a href="/animals/<%=animal.id%>">
        <div class="profile-pic ani-pic" style="background-image: url('<%=animal.image%>')"></div>
      </a>
      <p>Name: <%=animal.name%></p>
      <p>Species: <%=animal.species%></p>
    </div>
  <% end %>
<br>
<br>
</div>
